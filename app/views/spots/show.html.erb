<div class="contents row">
    <h2 class="name">
      <%= @spot.spot_name %>
    </h2>
    <div>
      <%= image_tag @spot.image %>
    </div>
    
    <div class="more">
           <ul class="more_list">
        <li>
          <%= link_to '編集', edit_spot_path(@spot.id), method: :get %>
        </li>
        <li>
          <%= link_to '削除', spot_path(@spot.id), method: :delete %>
        </li>
      </ul>
    </div>
    <p><%= @spot.id %></p>
    <span class="name"><%= @spot.spot_name %>
    </span>
  </div>
</div>